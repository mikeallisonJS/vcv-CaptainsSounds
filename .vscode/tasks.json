{
	"version": "2.0.0",
	"tasks": [
		{
		  "label": "Build application and add to Rack plugin folder",
		  "type": "shell",
		  "command": "make install",
		  "options": {
			"cwd": "${workspaceRoot}",
			"env":{
				"PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
				"RACK_DIR": "d:/Documents/Development/vcv/Rack-SDK"
			}
		  },
		  "group": {
			"kind": "build",
			"isDefault": true
		  },
		  "presentation": {
			"echo": true,
			"reveal": "always",
			"focus": false,
			"panel": "shared"
		  },
		  "problemMatcher": {
			"owner": "cpp",
			"fileLocation": ["absolute"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"severity": 4,
				"message": 5
			}
		  }
		},
		{
		  "label": "Clean project directories",
		  "type": "shell",
		  "command": "make clean",
		  "options": {
			"cwd": "${workspaceRoot}",
			"env":{
				"PATH": "C:/msys64/usr/bin/;C:/msys64/mingw64/bin",
				"RACK_DIR": "d:/Documents/Development/vcv/Rack-SDK/"
			}
		  },
		  "group": {
			"kind": "build",
			"isDefault": true
		  },
		  "presentation": {
			"echo": true,
			"reveal": "always",
			"focus": false,
			"panel": "shared"
		  },
		  "problemMatcher": {
			"owner": "cpp",
			"fileLocation": ["absolute"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1,
				"line": 2,
				"column": 3,
				"severity": 4,
				"message": 5
			}
		  }
		}
	  ]
	}